# Copy this file to secrets.yaml and update with your actual values
# Then create with: kubectl apply -f secrets.yaml
# DON'T commit secrets.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: dentalhelp-secrets
  namespace: dentalhelp
type: Opaque
stringData:
  MAIL_USERNAME: "your-email@example.com"
  MAIL_PASSWORD: "your-password"
  AZURE_STORAGE_CONNECTION_STRING: "your-azure-connection-string"
  AZURE_STORAGE_CONTAINER_NAME: "xrays"
  JWT_SECRET: "your-jwt-secret-key-here-minimum-32-characters-long"
  DB_USERNAME: "root"
  DB_PASSWORD: "your-secure-password"
